@inject ICategoryService CategoryService
@using ShoppingCart.Data.Services.Category

<div class="siderbar">
    <ul class="navbar-nav flex-column flex-grow-1">
        <li class="nav-item">
            <a asp-action="Index"
               asp-controller="Home"
               asp-route-category=""
               class="btn btn-outline-secondary m-3">
                Дом
            </a>
        </li>

        <li class="nav-item">
            <a asp-action="Index"
               asp-controller="Cart"
               asp-route-category=""
               class="btn btn-outline-secondary m-3">
                Корзина
            </a>
        </li>

        <li class="nav-item">
            <a asp-action="Index"
               asp-controller="Product"
               asp-route-category=""
               class="btn btn-outline-secondary m-3">
                Продукты
            </a>
        </li>

        @foreach (var categoryName in await @CategoryService.GetAllCategoryNamesAsync())
        {
            <li class="nav-item">
                <a asp-action="Index"
                   asp-controller="Product"
                   asp-route-category="@categoryName"
                   asp-route-productPage=""
                   class="btn btn-outline-secondary m-3">
                    @categoryName
                </a>
            </li>
        }
    </ul>
</div>